{
  "compilerOptions": {
    "plugins": [
      { "name": "typescript-plugin-css-modules" }
    ],
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx",
    "checkJs": false,
    "typeRoots": [ "./global.d.ts" ]
  }
}