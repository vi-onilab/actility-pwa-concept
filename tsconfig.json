{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "jsx": "react-jsx",
    "module": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "typeRoots": [
      "packages/typescript-config/global.d.ts",
      "./node_modules/@types"
    ],
    "paths": {
      "@pwa-concept/core/*": [
        "./packages/core/*"
      ],
      "@pwa-concept/core": [
        "./packages/core/index"
      ],
      "@pwa-concept/modules/*": [
        "./packages/modules/*"
      ],
      "@pwa-concept/modules": [
        "./packages/modules/index"
      ],
      "@pwa-concept/ui/*": [
        "./packages/ui/*"
      ],
      "@pwa-concept/ui": [
        "./packages/ui/index"
      ]
    }
  },
  "files": [
    "packages/typescript-config/global.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "packages/**/*"
  ]
}
